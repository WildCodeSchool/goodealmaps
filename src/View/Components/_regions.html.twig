<select class="region" autocomplete="off"  onclick="this.classList.toggle('opened');" onblur="this.classList.remove('opened');">
    <option class="not-selected" value="" link="/announcements{% if active != 'tous' %}?category={{active}}{% endif %}">Toutes les r√©gions</option>
    {% for region in regions %}
        <option value="{{region.id}}" link="/announcements?{% if active != 'tous' %}category={{active}}&{% endif %}region_id={{region.id}}"
        {% if selected==region.id %}
            selected="selected" 
        {% endif %}
        >
        {{region.region_name}}
        </option>
    {% endfor %}
</select>