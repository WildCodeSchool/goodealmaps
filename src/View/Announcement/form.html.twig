{% macro input(title, label, type, name, id, error, placeholder, value = "") %}
	<div class="label-column">
		<label for="{{ title }}">{{ label }}</label>
		<input type="{{ type }}" id="{{ id }}" name="{{ name }}" required placeholder="{{ placeholder }}" value="{{value}}">

		{% if error %}
			<p class="error">{{ error }}</p>
		{% endif %}
	</div>
{% endmacro %}

