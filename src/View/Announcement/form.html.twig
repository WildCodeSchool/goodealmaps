{% macro textarea(title, label, type, name, id, error, placeholder, value = "") %}
	<div class="label-column">
		<label for="{{ title }}">{{ label }}</label>
		<textarea type="{{ type }}" id="{{ id }}" name="{{ name }}" required placeholder="{{ placeholder }}">{{ value }}</textarea>
		{% if error %}
			<p class="error">{{ error }}</p>
		{% endif %}
	</div>
{% endmacro %}

